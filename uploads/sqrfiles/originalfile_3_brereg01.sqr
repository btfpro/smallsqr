!**************************************
begin-procedure Declare-Rows
#debug show '** Declare-Rows **'
!**************************************
! Row 1  
  Let #r    = 1
  Let #r0   = 3
  
! Row 3 to 4
  Let #r0a  = #r0
  Let #r1   = #r0a +  1
  Let #r1a  = #r1  +  1
  Let #r1b  = #r1  +  2
  
! Row 3
  Let #r2   = #r1b +  1
  Let #r2a  = #r2  +  1
  Let #r2b  = #r2  +  2

! Row 6 to 8
  Let #r3   = #r2  +  #r0a           
  Let #r3a  = #r3  +  1
  Let #r3b  = #r3  +  2
  
! Row 9 to 11  
  Let #r4   = #r3  +  #r0a
  Let #r4a  = #r4  +  1
  Let #r4b  = #r4  +  2    
  
! Row 12 to 15 
  Let #r5   = #r4  + #r0a    
