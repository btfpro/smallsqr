begin-procedure Select-Absences
#debug show '** Select-Absences **'
!**************************************
  
  Do convert-to-dtu-date($AsOfToday, $Today) 
  Do convert-from-dtu-date($Today, $Today)
  
Let #CountAbs = 0
Begin-Select
AA.BGN_DT
BB.ESTABID
AA.END_DT
AA.ORIG_BEGIN_DT
AA.ABSENCE_REASON
AA.EVT_CONFIG1
SD.DESCR
SD.ABS_TYPE_OPTN

  Let $BeginDt = Rtrim(&AA.BGN_DT, ' ')
  Let $Reason  = Rtrim(&SD.DESCR, ' ')
  Let $EndDt   = Rtrim(&AA.END_DT, ' ')
  Let $CID     = Rtrim(&AA.EVT_CONFIG1, ' ')
  Let $Abs_Type= Rtrim(&SD.ABS_TYPE_OPTN, ' ')
      
  Do convert-to-dtu-date($BeginDt,$BeginDt)
  Do convert-to-dtu-date($EndDt,$EndDt)
  
  Do Get-Abs-Xlat
  If $XLReason <> ''
     Let $Reason = $XLReason
  End-If
  
! Create Array: Absences  
  Let #CountAbs       = #CountAbs + 1
  
  Put $Emplid $Reason $BeginDt $EndDt $CID 
  into Absents(#CountAbs) Emplid Reason BeginDt EndDt CID

FROM PS_GP_ABS_EVENT AA
    ,PS_JOB BB
    ,PS_GP_ABS_TAKE C
    ,PS_GP_ABS_TYPE SD    
WHERE AA.EMPLID = $Emplid 
AND AA.EMPL_RCD = #Emplrcd
AND AA.BGN_DT < $AsOfToday
AND BB.ESTABID = $Estabid               
AND BB.EMPLID = AA.EMPLID
AND BB.EFFDT = (SELECT MAX(BBA.EFFDT) 
                FROM PS_JOB BBA 
                WHERE BBA.EMPLID   = BB.EMPLID 
                AND   BBA.EMPL_RCD = BB.EMPL_RCD
                AND   BBA.ESTABID  = BB.ESTABID
                AND   BBA.EFFDT <= $AsOfToday)
AND BB.EFFSEQ = (SELECT MAX(BBB.EFFSEQ)
                 FROM PS_JOB BBB
                 WHERE BBB.EMPLID   = BB.EMPLID 
                 AND   BBB.EMPL_RCD = BB.EMPL_RCD
                 AND   BBB.ESTABID  = BB.ESTABID
                 AND   BBB.EFFDT    = BB.EFFDT)
AND C.PIN_NUM = AA.PIN_TAKE_NUM
AND C.ABS_TYPE_OPTN = SD.ABS_TYPE_OPTN
AND SD.COUNTRY = 'BRA'
ORDER BY AA.ORIG_BEGIN_DT DESC
End-Select
End-Procedure Select-Absences

