B.GEX_VCN_SENIOR_DT
!B.REHIRE_DT		!GEX-MXT commented for REHIRE date logic in  9.0
B.SERVICE_DT
PD.NAME			!AXL 10/24/2002

  Let $company = &a.company	!AXL 10/24/2002
  Let $deptid  = &a.deptid	!AXL 10/24/2002
  Let $union_cd= &a.union_cd    !AXL 03/25/2004

  move &A.EMPLID to $emplid
  move 'Y' to $Empl_found
  move 'N' to $skip_record

  #debug8 display '-------------------------------------------'
  #debug8 display 'emplid ' noline
  #debug8 display $emplid

  show 'Emplid ================================================= ' $emplid
  show ' in main process '  &B.SERVICE_DT
  show 'Doing determine-service-dt' 
  
  ! GEX-MXT 03/24/2008 Fixed for REHIRE DT
   let $GEXJOB_REH_EMPLID = $emplid
   let #GEXJOB_REH_EMPLRCD = &A.EMPL_RCD
   let $GEXJOB_REH_ASOFDATE = $AsOfDate
   do Get-Job-Rehire-Dt
   !show 'emplid:' $emplid ',$GEXJOB_REH_REHIRE_DT ' $GEXJOB_REH_REHIRE_DT
    
  ! GEX-MXT 03/24/2008 Fixed for REHIRE DT 
  
  do determine-service-dt

  #debug8 display 'Service_Anniversary Flag before check trans ft pt ' noline
  #debug8 display $service_anniversary

  !AXL 03/25/2004 - Begin 

 ! show '$deptid : ' $deptid     

  Evaluate $deptid
     When = '0062'          
     When = '0066'
     When = '0042'
          let $transfer = 'X'
          break
      When-Other
	   show 'Doing check-transfer-FT-to-PT'
          do check-transfer-FT-to-PT
  End-Evaluate

  #debug8 display 'Service_Anniversary Flag after check trans ft pt ' noline
  #debug8 display $service_anniversary

  !AXL 03/25/2004 - Begin 
  let #Prior_Vac_Amt = 0	!AXL 03/25/2004

  !AXL 03/09/2000 Add - Begin
  #debug8 display 'Transfer Flag: ' noline 
  #debug8 display $transfer


  #debug8 display 'First Year Service Flag: ' noline
  #debug8 display $first_year_service

  #debug8 display 'Service_Anniversary Flag: ' noline
  #debug8 display $service_anniversary
  
  !AXL 03/09/2000 Add - End

  show '$transfer : ' $transfer

  if $transfer = 'Y'
    if $first_year_service = 'Y'
       !show $transfer_dt_cmp ' ' $PrevYearEnd 
       if $transfer_dt_cmp <= $PrevYearEnd !new check 5/13/2003
          !AXL 9/17/2002 New date range for 1st yr transfers - Begin

          let $pay_end_criteria  = 'AND EE.PAY_END_DT >= ' ||
                            '''' ||
                            $service_dt ||
                            '''' ||
                            ' AND EE.PAY_END_DT <= ' ||
                            '''' ||
                            $transfer_dt ||
                            '''' 
	  !show '$pay_end_criteria : ' $pay_end_criteria  
	  show 'Doing get-FT-vac-amt-new'
	  do get-FT-vac-amt-new
          !AXL 9/17/2002 New date range for 1st yr transfers - End
       !AXL 10/16/2003 New - Begin
       else 
           let $pay_end_criteria  = 'AND EE.PAY_END_DT > ' ||
                            '''' ||
                            $Prev_YearEndDt ||
                            '''' ||
                            ' AND EE.PAY_END_DT <= ' ||
                            '''' ||
                            $transfer_dt ||
                            '''' 
	  !show '$pay_end_criteria : ' $pay_end_criteria  
	  show 'Doing get-FT-vac-amt-new'
          do get-FT-vac-amt-new
       end-if
       !AXL 10/16/2003 New - End
    else
       if #dtu_years < 1
	  !show '#dtu_years ' #dtu_years 
          move 'Y' to $skip_record
	  !show '$skip_record : ' $skip_record
       else
          let $balance_year_criteria = 'AND    C2.BALANCE_YEAR      = ' || $AsOfYYYY
	  !show '$balance_year_criteria : ' $balance_year_criteria 
	  show 'Doing get-FT-vac-amt'
          do get-FT-vac-amt
       end-if
    end-if
  end-if

  !AXL 03/25/2004 - Begin 

  let #max_eligible_weeks = 0	!AXL 11/10/2004
  let $curr_addl_found = 'N'	!AXL 11/10/2004
  let #curr_wks_check = 0	!AXL 11/10/2004

  #debug8 show '$transfer flag        b4 calc vacn stmt ' $transfer 
  #debug8 show '$service_anniversary  b4 calc vacn stmt ' $service_anniversary

  show '$service_anniversary ' $service_anniversary 
  ! show '$transfer ' $transfer !ISDVSYH
  ! show '$skip_record ' $skip_record  !ISDVSYH

  if ($service_anniversary = 'Y' or $transfer = 'Y' or $transfer = 'X') and $skip_record = 'N'
    show 'Doing calc-vacation-amount'    
    do calc-vacation-amount
    #debug8 show '$transfer flag        b4 select-curr-addl-pay ' $transfer 
    #debug8 show '#max_eligible_weeks   b4 select-curr-addl-pay ' #max_eligible_weeks
	!show '$transfer ' $transfer
	show '#max_eligible_weeks ' #max_eligible_weeks !ISDVSYH

    if ($transfer <> 'Y' and #max_eligible_weeks <> 0) !do this for svc or x stores
       show 'Doing select-curr-addl-pay'
       do select-curr-addl-pay
	!show '$curr_addl_found ' $curr_addl_found 
         if $curr_addl_found = 'Y'
	    !AXL 11/10/2004 - Add - Begin
	    show '$union_cd ' $union_cd	!VENDSXN
	    !GEXPY_848_E147038_01 04/16/2013   Vahini Katta Begins
	    !evaluate $union_cd
	     !when = 'GGO'	     
	    !if $service_anniversary ='Y'  
	    
	    !show 'first_year_service' $first_year_service 
	    
	    let #Found=instr($GEXXX913_INCLUDE_UNION_CD_CRITERIA,$union_cd,1)
	    show '#Found :' #Found
	    show '$GEXXX913_INCLUDE_UNION_CD_CRITERIA:' $GEXXX913_INCLUDE_UNION_CD_CRITERIA
	    show '$union_cd :' $union_cd
	   
	   if #Found>0  
	   !GEXPY_848_E147038_01 04/16/2013   Vahini Katta Ends 
	    if $first_year_service='Y' and  $service_anniversary='Y'
	    
	       move #max_eligible_weeks to #eligible_weeks
	     else
               if #max_eligible_weeks <= #curr_wks_check
                  move 0 to #eligible_weeks
                  
               else
                  let #eligible_weeks = #max_eligible_weeks - #curr_wks_check
               end-if
             end-if 
	     ! show '#eligible_weeks ' #eligible_weeks 
	     !GEXPY_848_E147038_01 04/16/2013   Vahini Katta Begins
	     !when-other 
		!vendsxn
	      
	    !end-evaluate
	    End-If
	    !GEXPY_848_E147038_01 04/16/2013   Vahini Katta Ends
	    !AXL 11/10/2004 - Add - End
	    !ISDVDZK fixed the code for the SCT 11681483 on 11/26/2008 Begin
	    #debug8 display 'eligible_weeks after new : ' noline
            #debug8 display #eligible_weeks 
         end-if
    end-if

!    show '$skip_record ' $skip_record 
    if $skip_record = 'N'

      let #year_vac_amt = #week_vac_amt * #eligible_weeks
      multiply 1 times #year_vac_amt round=2
	show '#year_vac_amt ' #year_vac_amt 
      if #year_vac_amt <= 0
        move 'Y' to $skip_record

      end-if

      if $skip_record = 'N'
        add 1 to #inputtran
        let #year_vac_Amt = #year_vac_Amt - #Prior_Vac_Amt	!AXL 03/25/2004 
	show '#year_vac_Amt ' #year_vac_Amt 
        let #hrs_worked = 0
	show '$first_year_service ' $first_year_service 
	
        if $first_year_service = 'Y'
		!show '$transfer ' $transfer 
           if $transfer = 'Y'
		!show '$transfer_dt_cmp ' $transfer_dt_cmp 
		!show '$PrevYearEnd ' $PrevYearEnd
              if $transfer_dt_cmp <= $PrevYearEnd !new check 5/13/2003
                !AXL 9/17/2002 New date range for 1st yr transfers - Begin

                let $pay_end_criteria  = 'AND CC.PAY_END_DT >= ' ||
                          '''' ||
                          $service_dt ||
                          '''' ||
                          ' AND CC.PAY_END_DT <= ' ||
                          '''' ||
                          $max_pay_end_Dt ||
                         ''''
		!show '$pay_end_criteria  ' $pay_end_criteria  
		show 'Doing Hours-Worked-New  '
                do Hours-Worked-New   !Use PS_PAY_EARNINGS rather than PS_EARNINGS_BAL
                !AXL 9/17/2002 New date range for 1st yr transfers - End
              else !use prior year
                let $balance_year_criteria = 'AND    J.BALANCE_YEAR      = ' || $prev_year
		!show '$balance_year_criteria ' $balance_year_criteria 
		show 'Doing hours-worked'
                do hours-worked 
              end-if
           else !transfer = No --- go ahead and establish criteria
                let $pay_end_criteria  = 'AND CC.PAY_END_DT >= ' ||
                          '''' ||
                          $service_dt ||
                          '''' ||
                          ' AND CC.PAY_END_DT <= ' ||
                          '''' ||
                          $max_pay_end_Dt ||
                         ''''
		!show '$pay_end_criteria ' $pay_end_criteria
		show 'Doing Hours-Worked-New'
                do Hours-Worked-New   !Use PS_PAY_EARNINGS rather than PS_EARNINGS_BAL
           end-if 
        else !first_year_service = 'N'
           let $balance_year_criteria = 'AND    J.BALANCE_YEAR      = ' || $prev_year
	   !show '$balance_year_criteria ' $balance_year_criteria 
	   show 'Doing hours-worked'
           do hours-worked
        end-if
	show '#hrs_worked ' #hrs_worked 
	!GEXPY_848_E103857_01 2011-06-28 VENDAXG BEGIN
	if $first_year_service = 'Y'
        	let #avg_weekly_hrs_worked = #hrs_worked / 26
        Else
        	let #avg_weekly_hrs_worked = #hrs_worked / 52
        End-If
        
        !GEXPY_848_E103857_01 2011-06-28 VENDAXG END
        
	show '#avg_weekly_hrs_worked ' #avg_weekly_hrs_worked
        If #avg_weekly_hrs_worked = 0
          let #vac_hourly_rt = 0
        Else
          let #vac_hourly_rt = #week_vac_amt/#avg_weekly_hrs_worked
        End-If
	!GEXPY_848_E103857_01 2011-06-28 VENDAXG BEGIN
	!Added code to double the Amount of 6 months on 1 year completion.
	If #dtu_years = 1 
		Do Get-Previous-Amount
