!***********************************************************************
!This procedure finds out the appropriate service date and finds out
!if the employee has met his/her service anniversary during the current
!pay period.
!***********************************************************************
begin-procedure determine-service-dt
!***********************************************************************

#debug9 Show '-- In Determine-Service-Dt Step --'
  move 'N' to $service_anniversary
 
  !show 'In determine-service-dt'
  show '&B.GEX_VCN_SENIOR_DT ' &B.GEX_VCN_SENIOR_DT

  if RTRIM(&B.GEX_VCN_SENIOR_DT,' ') <> ''
    move &B.GEX_VCN_SENIOR_DT to $service_dt
  else
      
	!show '&B.REHIRE_DT ' &B.REHIRE_DT		!GEX-MXT commented for rehire date logic
	show 'Rehire Date : ' $GEXJOB_REH_REHIRE_DT   !GEX-MXT added for rehire date logic
    !if RTRIM(&B.REHIRE_DT,' ') <> ''			!GEX-MXT commented for rehire date logic
    if RTRIM($GEXJOB_REH_REHIRE_DT,' ')	<> ''		!GEX-MXT added for rehire date logic
     
      show 'Doing Select-REI-date'
      do Select-REI-date			!AXL 7/28/2000 New Rsn Check
      if $REI_date_found = 'Y'			!AXL 7/28/2000 New Rsn Check
         show '  &B.SERVICE_DT  ' &B.SERVICE_DT
         move &B.SERVICE_DT to $service_dt	!AXL 7/28/2000 New Rsn Check
          
      else	
        !show ' 	&B.REHIRE_DT ' &B.REHIRE_DT	!AXL 7/28/2000 New Rsn Check	!GEX-MXT commented for rehire date logic
        show 'Rehire Date : ' $GEXJOB_REH_REHIRE_DT	!GEX-MXT added for rehire date logic
         !move &B.REHIRE_DT to $service_dt	!AXL 7/28/2000 New Rsn Check			!GEX-MXT commented for rehire date logic
         move $GEXJOB_REH_REHIRE_DT to $service_dt				!GEX-MXT added for rehire date logic
         
      end-if					!AXL 7/28/2000 New Rsn Check
    else
     show ' in else $service_dt ' &B.SERVICE_DT
      move &B.SERVICE_DT to $service_dt
      
      
    end-if
  end-if
  show '$service_dt '  $service_dt
  Let $Service_Cmp_Dt = strtodate($service_dt,'DD-MON-YYYY')	!VENDSXN
  !show '$Service_Cmp_Dt: '$Service_Cmp_Dt	!VENDSXN
  do Convert-To-DTU-Date($service_dt, $service_dt_dtu)
  !SHOW ' $service_dt_dtu  ' $service_dt_dtu           ' $AsOfDate_dtu  ' $AsOfDate_dtu	! testing
  do dtu-diff-years($service_dt_dtu,$AsOfDate_dtu,#dtu_years)
  do dtu-diff-years($service_dt_dtu,$AsOfDateMinus1_dtu,#dtu_yearsMinus1)
  do dtu-diff-months($service_dt_dtu,$AsOfDate_dtu,#dtu_months)
  do dtu-diff-months ($service_dt_dtu,$AsOfDateMinus1_dtu,#dtu_monthsMinus1)

  show '#dtu_years ' #dtu_years
   show '#dtu_yearsMinus1 ' #dtu_yearsMinus1 !ISDVSYH
  show '#dtu_months ' #dtu_months
   show '#dtu_monthsMinus1' #dtu_monthsMinus1 !ISDVSYH


  Let $exclude_last_6_month = 'N' !GEXPY_848_E103857_01 2011-06-28  !Reset the variable
  if (#dtu_months=6 and  #dtu_monthsMinus1<>6) or #dtu_years<>#dtu_yearsMinus1
  
    move 'Y' to $service_anniversary
    if #dtu_months = 6
      Let #dtu_years = 0.5
      move 'Y' to $first_year_service
    else
      move 'N' to $first_year_service
    end-if
    
    If #dtu_years = 1
      ! Let $HOLD-CHECK-MM = substr($service_dt_dtu,3,2)
      Let $HOLD-CHECK-MM = edit($service_dt,'MM')
      let #value = to_number($HOLD-CHECK-MM)
      show '$HOLD-CHECK-MM' $HOLD-CHECK-MM
      show '#value' #value 
       if #value > 6 
        let $exclude_last_6_month = 'Y'
         else
        let $exclude_last_6_month = 'N'
       end-if
    end-if
    show '$exclude_last_6_month' $exclude_last_6_month
     
	!show '$first_year_service ' $first_year_service
  !AXL 9/17/2002 New else logic to categorize 1st yr svc anniversaries - Begin
  else
     if #dtu_months = 6
       move 'Y' to $first_year_service
     else
       move 'N' to $first_year_service 
    end-if
	show '$first_year_service ' $first_year_service
	show '$service_anniversary ' $service_anniversary
  end-if
  !AXL 9/17/2002 New else logic to categorize 1st yr svc anniversaries - End

  !AXL 9/17/2002 New logic to determine date range for 1st year svc - Begin
  if $first_year_service = 'Y'
  let $service_dt_plus_one = dateadd(strtodate($service_dt),'Month',6)
  !show '$service_dt_plus_one ' $service_dt_plus_one 
  show 'Doing find-max-pay-end'
  do find-max-pay-end
  end-if
  !AXL 9/17/2002 New logic to determine date range for 1st year svc - End
end-procedure


